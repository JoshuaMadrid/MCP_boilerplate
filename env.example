# MCP Boilerplate Environment Configuration
# Copy this file to .env and customize for your environment

# Authentication
REQUIRE_AUTH=false
JWT_SECRET=your-super-secure-secret-key-change-in-production

# Security Configuration
ALLOWED_DOMAINS=example.com,httpbin.org,jsonplaceholder.typicode.com
ALLOWED_DIRECTORIES=/tmp,/var/tmp
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Server Configuration
PORT=3000
LOG_LEVEL=info

# Database (for production deployments)
DATABASE_URL=postgresql://user:password@localhost:5432/mcpdb
REDIS_URL=redis://localhost:6379

# External API Keys (add as needed for custom tools)
WEATHER_API_KEY=your-weather-api-key
OPENAI_API_KEY=your-openai-api-key

# Monitoring
ENABLE_METRICS=false
SENTRY_DSN=your-sentry-dsn 